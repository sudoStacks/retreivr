version: "3.9"

services:
  retreivr:
    # Docker Hub:
    image: retreivr/retreivr:0.9.1
    # Or GHCR:
    # image: ghcr.io/retreivr/retreivr:0.9.1

    container_name: retreivr
    ports:
      - "8090:8000"

    environment:
      - RETREIVR_HOST=0.0.0.0
      - RETREIVR_PORT=8090

    volumes:
      # IMPORTANT: Use absolute host paths in Portainer.
      - /srv/retreivr/downloads:/app/downloads
      - /srv/retreivr/data:/app/data
      - /srv/retreivr/config:/app/config
      - /srv/retreivr/logs:/app/logs
      - /srv/retreivr/tokens:/app/tokens

    restart: unless-stopped
