version: "3.9"

services:
  retreivr:
    image: ghcr.io/retreivr/retreivr:0.9.1
    container_name: retreivr
    ports:
      - "8090:8000"
    environment:
      - TZ=America/Chicago 
      # Change to your local TZ

    volumes:
      # Map downloads to your media storage location.
      - ./downloads:/app/downloads
      - ./data:/app/data
      - ./config:/app/config
      - ./logs:/app/logs
      - ./tokens:/app/tokens
    restart: unless-stopped

# Notes:
# - Playlist folder paths in config.json are relative to /downloads inside the container.
# - For media libraries, map ./downloads to your actual storage path on the host.
