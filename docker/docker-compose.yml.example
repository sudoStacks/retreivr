version: "3.9"

services:
  retreivr:
    image: ghcr.io/retreivr/retreivr:0.9.3
    container_name: retreivr
    ports:
      - "8090:8000"
    environment:
      - TZ=America/Chicago 
      # Change to your local TZ

    volumes:
      # Map /app/data to your media storage location.

      - ./data:/app/data
      # Example (recommended):
      # - /path/on/host/downloads:/app/downloads

    restart: unless-stopped

# Notes:
# - Playlist folder paths in config.json are relative to /downloads inside the container.
# - For media libraries, map ./downloads to your actual storage path on the host.
# - Default video container is MKV as of v0.9.3 (configurable in config.json).
