version: "3.9"

services:
  youtube-archiver:
    image: ghcr.io/z3ro-2/youtube-archiver:latest
    ports:
      - "8090:8000"
    environment:
      # Defaults match the container's internal layout; override if needed.
      - YT_ARCHIVER_DOWNLOADS_DIR=/downloads
      - YT_ARCHIVER_DATA_DIR=/data
      - YT_ARCHIVER_LOG_DIR=/logs
      - YT_ARCHIVER_TOKENS_DIR=/tokens
    volumes:
      # Map downloads to your media storage location.
      - ./downloads:/downloads
      - ./data:/data
      - ./config:/config
      - ./logs:/logs
      - ./tokens:/tokens
    restart: unless-stopped

# Notes:
# - Playlist folder paths in config.json are relative to /downloads inside the container.
# - For media libraries, map ./downloads to your actual storage path on the host.
